node {
    def myMavenContainer = docker.image('maven')
    myMavenContainer.pull()

    stage('prep') {
        git url: 'https://github.com/ankushugale1979/Altimetrik'
    }

    stage('build') {
      myMavenContainer.inside("-v ${env.HOME}") {
        sh 'mvn -f HelloWorld/pom.xml clean package'
      }
    }

    stage('sonar-scanner') {
      def sonarqubeScannerHome = tool name: 'sonar', type: 'hudson.plugins.sonar.SonarRunnerInstallation'
      withCredentials([string(credentialsId: 'sonar', variable: 'sonarLogin')]) {
        sh "${sonarqubeScannerHome}/bin/sonar-scanner -e -Dsonar.host.url=http://sonarqube:9000 -Dsonar.login=${sonarLogin} -Dsonar.projectName=gs-gradle -Dsonar.projectVersion=${env.BUILD_NUMBER} -Dsonar.projectKey=GS -Dsonar.sources=HelloWorld/src/main/java/ -Dsonar.language=java"
      }
    }
}