pipeline {
    agent {
        docker {
            image 'maven:3-alpine'
            args '-v $HOME/.m2:/root/.m2'
        }
    }
    stages {
        stage('Build') {
            steps {
                /*sh 'git clone https://github.com/ankushugale1979/Altimetrik'*/
		sh 'apt-get update && apt-get install git'
		sh 'git clone https://github.com/ankushugale1979/Altimetrik'
		sh 'mvn -f HelloWorld/pom.xml clean package'
            }
        }
    }
}
